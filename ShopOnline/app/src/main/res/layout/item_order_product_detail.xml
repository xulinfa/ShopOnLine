<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.xulf.shoponline.com.loopj.android.image.SmartImageView
            android:id="@+id/sdv_item_orderproductdetail_pic"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/welcom_bg"
            android:layout_height="90dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_Orderdetail_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:text="机械键盘"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_orderdetailitemproductDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/deepgrey"
            android:text="机械键盘的描述"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_orderdetailitemprice"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/bgred"
            android:textSize="16sp"
            android:text="￥49.99"/>

        <TextView
            android:id="@+id/tv_orderdetailproductitemnum"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/deepgrey"
            android:textSize="16sp"
            android:text="x 1"/>
        </LinearLayout>
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_order_pingjia_id"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/textview_border"
        android:layout_marginRight="10dp"
        android:text="追加评价"
        android:textSize="18sp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey"/>



</LinearLayout>
