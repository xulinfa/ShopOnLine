<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/grey"
    tools:context="com.example.xulf.shoponline.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:gravity="right"
            android:textSize="22sp"
            android:textStyle="italic"

            android:textColor="@color/colorAccent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="22sp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textSize="22sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!--密码-->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="20sp"

        android:layout_marginRight="5dp"
        android:textStyle="italic"
        android:text="密    码"/>

    <EditText
        android:id="@+id/edt_reg_password"
        android:layout_width="0dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textSize="24sp"
        android:inputType="textPassword"
        android:textStyle="italic" />
    <ImageView
        android:id="@+id/img_reg_lookPassword"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/switch_in_hide"/>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="确认密码"/>

        <EditText
            android:id="@+id/edt_reg_check_password"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="24sp"
            android:inputType="textPassword"
            android:textStyle="italic" />
        <ImageView
            android:id="@+id/img_reg_check_lookPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/switch_in_hide"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        android:onClick="regUserClick"
        android:background="@drawable/selector_addbutton_bg"
        android:text="注册"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/chb_xieyi"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:checked="true"
            style="@style/checkboxAll"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已阅读并同意以下协议,《支付宝服务协议》，《本平台购物协议》"/>
    </LinearLayout>




</LinearLayout>
