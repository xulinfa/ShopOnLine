<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:background="@color/bgred"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="26sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/tv_newpwd_phone"
            android:layout_width="0dp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textSize="22sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!--密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:textStyle="italic"
            android:text="  新密码："/>

        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="0dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="24sp"
            android:inputType="textPassword"
            android:textStyle="italic" />
        <ImageView
            android:id="@+id/img_new_lookPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/switch_in_hide"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="5dp"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="确认密码："/>

        <EditText
            android:id="@+id/edt_new_check_password"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="24sp"
            android:inputType="textPassword"
            android:textStyle="italic" />
        <ImageView
            android:id="@+id/img_new_check_lookPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/switch_in_hide"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_changge_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        android:onClick="changePwdClick"
        android:background="@drawable/selector_addbutton_bg"
        android:text="确认修改"/>


</LinearLayout>
