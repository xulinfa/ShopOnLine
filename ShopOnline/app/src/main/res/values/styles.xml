<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bgred</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="checkboxAll" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_icon_checkall</item>
    </style>

    <!--线-->

    <style name="line">
        <item name="android:background">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

<style name="btn">
    <item name="android:shape">rectangle</item>
    <item name="android:radius">10dip</item>
</style>


    <!--checkbox-->
    <style name="customCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_icon_checkall</item>
    </style>


    <!--属性对话框动画-->
  <style name="dialogstyle" parent="android:Animation">
      <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>


    <style name="my_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
